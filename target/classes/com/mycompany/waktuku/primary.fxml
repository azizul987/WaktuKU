<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressBar?>

<VBox alignment="CENTER" spacing="15"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.mycompany.waktuku.DashboardController">

    <VBox spacing="10" alignment="CENTER">
      <HBox alignment="CENTER">
        <Label text="Session : " />
        <Label fx:id="sessionLabel" text="1"/>
      </HBox>
        <Button text="+ New" onAction="#newSession" onAction="#stopFocus"/>
    </VBox>

    <Label fx:id="focusScoreLabel" text="0% Focus"/>
    <ProgressBar fx:id="focusBar" prefWidth="250"/>

</VBox>
